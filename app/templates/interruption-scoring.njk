{% extends '.layout.njk' %}
{% from "dist/govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "dist/govuk/components/button/macro.njk" import govukButton %}
{% from "./components/macro.njk" import crumbToken %}

{% block pageTitle %}
    Score your project - {{siteTitle}}
{% endblock %}

{% block beforeContent %}
    {{ govukBackLink({
        text: 'Back',
        href: backLink,
        attributes: {id: 'linkBack'}
    }) }}
{% endblock %}

{% set mainClasses = "interruption-scoring-main" %}
{% block content %}
  <div>
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">We will now score your project against our funding priorities</h1>
        <div class="govuk-body">
          <p>You have passed our eligibility criteria.</p>
          <p>Your answers to the next questions will help us decide which projects we will invite to make a full application.</p>
          <p>Your project will get a score of weak, average or strong. You can then make changes to improve your score.</p>
        </div>
      </div>
    </div>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        {{ govukButton({
          href: nextLink,
          text: "Continue",
          attributes: {id: "btnContinue"}
        }) }}
      </div>
    </div>
  </div>  
{% endblock %}
